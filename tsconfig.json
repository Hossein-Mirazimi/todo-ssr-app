{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2020",
    "lib": [
      "DOM",
      "dom.iterable",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "/~/*": ["src/*"]
    },
    "types": ["vite/client", "@types/html-minifier"]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
